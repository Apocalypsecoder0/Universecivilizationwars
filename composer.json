{
    "name": "Apocalypsecoder0/universecivilizationwars",
    "description": "A turn-based MMORPG game built with PHP.",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "monolog/monolog": "^2.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.0",
        "nikic/fast-route": "^1.3",
        "phpunit/phpunit": "^9.0"  // For testing
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"  // Development dependencies
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8000 -t public"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
